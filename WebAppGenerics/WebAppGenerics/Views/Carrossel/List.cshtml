@model IEnumerable<WebAppGenerics.Models.Carrossel>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Produção)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Operador)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Revisor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Produção)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Operador)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Revisor)
        </td>
        <td>
            <a href="/Carrossel/Edit/@item.Id" class="btn btn-warning">Editar</a>
            <a href="/Carrossel/Delete/@item.Id" class="btn btn-danger">Deletar</a>
            <a href="/Carrossel/Details/@item.Id" class="btn btn-primary">Detales</a>
        </td>
    </tr>
}

</table>
